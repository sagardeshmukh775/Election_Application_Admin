<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:padding="3dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#961414">

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="4dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/user_email1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="4dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/user_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Store Name:"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/user_store1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="4dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/user_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile:"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/user_mobile1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="4dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/user_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City:"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/user_city1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="4dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/user_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Area:"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/user_area1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/cancle"
        android:textSize="15dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="end"
        android:layout_marginTop="7dp"
        android:layout_width="100dp"
        android:text="Cancle"
        android:textColor="#F4310B"
        android:layout_height="wrap_content" />

</LinearLayout>